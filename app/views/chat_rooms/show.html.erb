<div>
	<img class="imagen" width="50px" height="50px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/220px-User_icon_2.svg.png">
<h2 class="salachat"><%= @chat_room.title %></h2>
</div>
<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>

<hr>

<%= form_for @message, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <small class="text-muted">Min 2 caractéres, max 1000 caractéres </small>
  </div>

  <%= f.submit "Enviar", class: 'btn btn-primary btn-lg' %>
<% end %>